          <ma:description>This voice command is performed by saying the word "Confirm".</ma:description>
          <ma:type>Voice Command</ma:type>
          <ma:icon>modality-voice-confirm</ma:icon>
        </ma:annotations>
      </xs:documentation>
    </xs:annotation>
    <xs:complexType/>
  </xs:element>
</xs:schema>