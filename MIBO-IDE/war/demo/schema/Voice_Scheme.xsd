    <xs:annotation>
      <xs:documentation >
        <ma:annotations>
          <ma:name>Switch On</ma:name>
          <ma:description>This voice command is performed by saying the words "Switch On".</ma:description>
          <ma:type>Voice Command</ma:type>
          <ma:icon>modality-voice-switch-on</ma:icon>
        </ma:annotations>
      </xs:documentation>
    </xs:annotation>
    <xs:complexType/>
  </xs:element>
