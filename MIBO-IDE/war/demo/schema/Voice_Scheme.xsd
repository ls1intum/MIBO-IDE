  </xs:element>
  <xs:element name="setLevel">
    <xs:annotation>
      <xs:documentation >
        <ma:annotations>
          <ma:name>Set Level</ma:name>
          <ma:description>This voice command is performed by saying the words "Set [Fixture] to [Level] percent" whereby [Fixture]Â represents the type of a fixture, such as "Light".</ma:description>
          <ma:type>Voice Command</ma:type>
          <ma:icon>modality-voice-set-level</ma:icon>
        </ma:annotations>
      </xs:documentation>
    </xs:annotation>
    <xs:complexType/>
  </xs:element>
